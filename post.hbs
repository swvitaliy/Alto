{{!< default}}

<div class="content-area">
    <main class="site-main">
        {{#post}}
            <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}} single-post" postid="{{id}}">
                {{> post-header single=true number_date=true big_title=true}}
                {{> post-media ratio="horizontal" with_caption=true}}
                <!-- <div class="post-content kg-canvas u-text-format"> -->
                <div class="post-content container medium u-text-format">
                    {{content}}
                </div>
                <div class="container medium">
                    {{> share}}
                    {{> author}}
                </div>
            </article>
            {{> post-navigation}}
            {{> related}}
            {{> comment}}
        {{/post}}
    </main>
</div>
